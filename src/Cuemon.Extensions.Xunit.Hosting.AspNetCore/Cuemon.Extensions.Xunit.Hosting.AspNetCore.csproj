  </ItemGroup>

  <ItemGroup Condition="$(TargetFramework.StartsWith('netcoreapp3'))">
    <PackageReference Include="Microsoft.AspNetCore.TestHost" Version="3.1.30" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Cuemon.AspNetCore\Cuemon.AspNetCore.csproj" />
