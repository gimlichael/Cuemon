<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <AssemblyOriginatorKeyFile>..\cuemon.snk</AssemblyOriginatorKeyFile>
    <SignAssembly>true</SignAssembly>
  </PropertyGroup>

  <PropertyGroup>
    <Product>Cuemon .NET Standard</Product>
    <AssemblyName>Cuemon.Extensions.Xml.Serialization</AssemblyName>
    <AssemblyTitle>Cuemon.Extensions.Xml.Serialization</AssemblyTitle>
    <Description>The Cuemon.Extensions.Xml.Serialization assembly provides extension methods for XML scenarios focused on serialization and deserialization.</Description>
    <Company>Weubphoria</Company>
    <Authors>Michael Mortensen</Authors>
    <Copyright>Copyright © Weubphoria 2009-2020. All rights reserved.</Copyright>
    <FileVersion>6.0.2020.25</FileVersion>
    <Version>6.0.2020.25</Version>
    <AssemblyVersion>6.0.2020.0</AssemblyVersion>
    <Authors>Michael Mortensen</Authors>
    <NeutralLanguage>en-US</NeutralLanguage>
  </PropertyGroup>

  <PropertyGroup>
    <PackageIconUrl>https://nblcdn.net/themes/cuemon.net/img/core/128x128x.png</PackageIconUrl>
    <PackageProjectUrl>https://www.cuemon.net/</PackageProjectUrl>
    <PackageLicenseUrl>https://opensource.org/licenses/MIT</PackageLicenseUrl>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Cuemon.Extensions.Xml.Serialization.csproj.vspscc" />
    <None Remove="Cuemon.Serialization.Xml.csproj.vspscc" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Cuemon.Extensions.Core\Cuemon.Extensions.Core.csproj" />
    <ProjectReference Include="..\Cuemon.Extensions.Runtime.Serialization\Cuemon.Extensions.Runtime.Serialization.csproj" />
    <ProjectReference Include="..\Cuemon.Extensions.Xml\Cuemon.Extensions.Xml.csproj" />
  </ItemGroup>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="copy /Y &quot;$(TargetDir)$(ProjectName).dll&quot; &quot;C:\dlls\cuemon\$(ProjectName).dll&quot;&#xD;&#xA;copy /Y &quot;$(TargetDir)$(ProjectName).xml&quot; &quot;C:\dlls\cuemon\$(ProjectName).xml&quot;" />
  </Target>

</Project>